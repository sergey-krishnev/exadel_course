<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>mainOnlyServlet</servlet-name>
        <servlet-class>com.servlet.MainOnlyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>com.servlet.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>outputServlet</servlet-name>
        <servlet-class>com.servlet.OutputServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainOnlyServlet</servlet-name>
        <url-pattern>/MainOnlyServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>outputServlet</servlet-name>
        <url-pattern>/OutputServlet</url-pattern>
    </servlet-mapping>

</web-app>